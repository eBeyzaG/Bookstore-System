<server description="Storage LogOps Server">

    <featureManager>
        <feature>jaxrs-2.1</feature>
        <feature>jsonp-1.1</feature>
        <feature>cdi-2.0</feature>
        <feature>mpConfig-2.0</feature>
        <feature>mpRestClient-2.0</feature>
        <feature>appSecurity-3.0</feature>
        <feature>servlet-4.0</feature>
        <feature>mpJwt-1.2</feature>
    </featureManager>


    <variable name="default.http.port" defaultValue="44300"/>
    <variable name="default.https.port" defaultValue="44301"/>

    <keyStore id="defaultKeyStore" password="secret"/>

    <httpEndpoint id="defaultHttpEndpoint"
                  host="*"
                  httpPort="${default.http.port}"
                  httpsPort="${default.https.port}"
    />
    <webApplication location="storageLog.war" context-root="/"/>

</server>