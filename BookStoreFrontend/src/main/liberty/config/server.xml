<server description="Book Store Frontend">
    <featureManager>
        <feature>jaxrs-2.1</feature>
        <feature>jsonp-1.1</feature>
        <feature>jsf-2.3</feature>
        <feature>cdi-2.0</feature>

        <feature>appSecurity-3.0</feature>
        <feature>servlet-4.0</feature>
        <feature>mpJwt-1.2</feature>
        <feature>mpConfig-2.0</feature>
        <feature>mpRestClient-2.0</feature>
    </featureManager>


    <variable name="default.http.port" defaultValue="9090"/>
    <variable name="default.https.port" defaultValue="9091"/>

    <httpEndpoint httpPort="${default.http.port}"
                  httpsPort="${default.https.port}"
                  id="defaultHttpEndpoint" />

    <keyStore id="defaultKeyStore" password="bookStorePwd"/>

    <basicRegistry id="basic" realm="WebRealm">

        <user name="beyza" password="beyzasifre" />

        <group name="adminGroup">
            <user name="beyza" />
        </group>


    </basicRegistry>

    <application location="bookStoreFrontend.war" context-root="/">
        <application-bnd>
            <security-role name="admin">
                <group name="adminGroup" />
            </security-role>
        </application-bnd>
    </application>

    <jwtBuilder id="jwtBookStoreBuilder" issuer="http://openliberty.io" expiry="12h" />
    <ssl id="defaultSSLConfig" trustDefaultCerts="true" />

</server>