<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Book Store</display-name>

    <context-param>
        <param-name>org.apache.myfaces.SECRET</param-name>
        <param-value>aGVsbG9ieXo=</param-value>
    </context-param>

    <context-param>
        <param-name>org.apache.myfaces.MAC_SECRET</param-name>
        <param-value>YnllYnllYno=</param-value>
    </context-param>

    <context-param>
        <param-name>org.apache.myfaces.SERIALIZE_STATE_IN_SESSION</param-name>
        <param-value>false</param-value>
    </context-param>


    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <security-role>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <role-name>mod</role-name>
    </security-role>
    <security-role>
        <role-name>user</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>BookAdding</web-resource-name>
            <url-pattern>/application.xhtml</url-pattern>
            <url-pattern>/logHistory.xhtml</url-pattern>
            <url-pattern>/storage.xhtml</url-pattern>
            <url-pattern>/deleteBook.xhtml</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>



    <login-config id="LoginConfig">
        <auth-method>FORM</auth-method>
        <realm-name>WebRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.xhtml</form-login-page>
            <form-error-page>/error.xhtml</form-error-page>
        </form-login-config>
    </login-config>
</web-app>